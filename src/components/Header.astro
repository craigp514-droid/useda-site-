---
// Header component
---

<header class="bg-white border-b border-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo / Site Name -->
      <a href="/" class="flex items-center space-x-2">
        <div class="w-10 h-10 bg-navy-900 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">US</span>
        </div>
        <div class="hidden sm:block">
          <span class="text-navy-900 font-semibold text-lg">US Economic Development</span>
          <span class="text-navy-600 font-medium text-lg">Association</span>
        </div>
      </a>

      <!-- Navigation -->
      <div class="flex items-center space-x-6">
        <nav class="hidden md:flex items-center space-x-6">
          <a href="/about" class="text-gray-600 hover:text-navy-900 font-medium transition-colors">
            About
          </a>
          <a href="/partners" class="text-gray-600 hover:text-navy-900 font-medium transition-colors">
            Partners
          </a>
        </nav>

        <!-- CTA Button -->
        <a
          href="/#get-started"
          class="bg-navy-900 text-white px-5 py-2.5 rounded-lg font-medium hover:bg-navy-800 transition-colors"
        >
          Get Started
        </a>
      </div>
    </div>
  </div>
</header>
